<main class="mx-auto max-w-5xl p-6">
  <h1 class="text-2xl font-bold mb-4">Marketplace Listings</h1>

  <a href="/marketplace/new" class="bg-emerald-600 text-white px-4 py-2 rounded hover:bg-emerald-700">+ New Listing</a>

  <div class="mt-6 grid gap-4">
    <% listings.forEach(l => { %>
      <div class="bg-white rounded shadow p-4">
        <h2 class="text-lg font-semibold"><%= l.material %> - <%= l.quantity %> <%= l.unit %></h2>
        <p class="text-gray-600">Seller: <%= l.businessId.name %></p>
        <p class="text-gray-600">Starting Price: $<%= l.startingPrice %></p>
        <a href="/marketplace/<%= l._id %>" class="text-blue-600 hover:underline">View & Bid</a>
      </div>
    <% }) %>
  </div>
</main>
