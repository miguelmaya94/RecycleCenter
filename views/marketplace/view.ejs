<main class="mx-auto max-w-3xl p-6">
  <h1 class="text-2xl font-bold mb-4"><%= listing.material %> - <%= listing.quantity %> <%= listing.unit %></h1>
  <p>Seller: <%= listing.businessId.name %></p>
  <p>Starting Price: $<%= listing.startingPrice %></p>
  <p class="mt-2"><%= listing.description %></p>

  <h2 class="text-xl font-semibold mt-6 mb-2">Bids</h2>
  <ul class="space-y-2">
    <% bids.forEach(b => { %>
      <li class="bg-gray-100 p-2 rounded">ðŸ’² <%= b.amount %> by <%= b.businessId.name %></li>
    <% }) %>
  </ul>

  <form method="POST" action="/marketplace/<%= listing._id %>/bid" class="mt-6 grid gap-2">
    <label>Your Bid ($) <input type="number" name="amount" class="input" required></label>
    <button class="bg-blue-600 text-white px-4 py-2 rounded">Place Bid</button>
  </form>
</main>
