<%- include('../partials/navbar') %>
<br>
<div class="max-w-md mx-auto bg-white p-6 rounded shadow">
  <h2 class="text-xl font-semibold mb-4">Login</h2>

  <% if (typeof error !== 'undefined') { %>
    <p class="text-red-600 mb-3"><%= error %></p>
  <% } %>

  <form method="POST" action="/login" class="grid gap-4">
    <label>Email <input type="email" name="email" class="w-full border rounded px-3 py-2" required></label>
    <label>Password <input type="password" name="password" class="w-full border rounded px-3 py-2" required></label>
    <button class="px-4 py-2 bg-lime-300 rounded hover:bg-lime-400">Login</button>
  </form>

  <p class="mt-4 text-sm">No account? <a href="/register" class="text-blue-600 hover:underline">Register</a></p>
</div>






