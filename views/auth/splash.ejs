<%- include('../partials/navbar') %>

<main class="min-h-screen flex items-center justify-center bg-gray-100 px-4">
  <div class="bg-white shadow rounded-lg p-8 w-full max-w-md text-center">
    <h1 class="text-3xl font-bold mb-6 text-lime-600">Recycle Center</h1>

    <!-- Login Form -->
    <form method="POST" action="/login" class="space-y-4 mb-6">
      <label class="block text-left">
        <span class="text-sm">Email</span>
        <input type="email" name="email" required class="input">
      </label>

      <label class="block text-left">
        <span class="text-sm">Password</span>
        <input type="password" name="password" required class="input">
      </label>

      <button class="bg-lime-600 text-white px-4 py-2 rounded w-full hover:bg-lime-700">
        Login
      </button>
    </form>

    <!-- Divider -->
    <div class="my-6 flex items-center">
      <hr class="flex-grow border-gray-300">
      <span class="px-2 text-gray-500 text-sm">or</span>
      <hr class="flex-grow border-gray-300">
    </div>

    <!-- Register Options -->
    <div class="space-y-3">
      <a href="/register" class="block bg-blue-500 text-white py-2 rounded hover:bg-blue-600">
        Register as User
      </a>
      <a href="/sponsor/register" class="block bg-purple-500 text-white py-2 rounded hover:bg-purple-600">
        Register as Sponsor
      </a>
      <a href="/business/register" class="block bg-emerald-500 text-white py-2 rounded hover:bg-emerald-600">
        Register as Business
      </a>
    </div>
  </div>
</main>

<style>
  .input { @apply w-full border rounded px-3 py-2; }
</style>
