<div class="mx-auto max-w-5xl grid md:grid-cols-2 gap-8 items-center">
  <!-- Left: Brand + mood -->
  <section class="text-center md:text-left">
    <div class="inline-flex items-center gap-3 bg-emerald-100 text-emerald-900 px-3 py-1 rounded-full text-sm font-medium">
      ‚ôªÔ∏è Recycle smarter
    </div>
    <h1 class="mt-4 text-4xl md:text-5xl font-extrabold tracking-tight text-emerald-800">
      Recycle Center
    </h1>
    <p class="mt-3 text-emerald-700/80 text-lg">
      Track progress, manage materials, and connect with recycling partners ‚Äî all in one place.
    </p>
    <ul class="mt-6 space-y-2 text-emerald-700/80">
      <li>‚Ä¢ Businesses: invoices, customers, items, admin</li>
      <li>‚Ä¢ Users: personal recycling goals & history</li>
      <li>‚Ä¢ Sponsors: programs & impact analytics</li>
    </ul>
  </section>

  <!-- Right: Auth card -->
  <section class="bg-white/90 backdrop-blur rounded-2xl shadow p-6 md:p-8">
    <div class="flex border-b mb-6">
      <button id="tabLogin" class="flex-1 py-2 text-center font-semibold border-b-2 border-emerald-600 text-emerald-700">Login</button>
      <button id="tabRegister" class="flex-1 py-2 text-center font-semibold text-gray-500 hover:text-emerald-700">Register</button>
    </div>

    <!-- Login form -->
    <form id="formLogin" method="POST" action="/login" class="grid gap-4">
      <% if (typeof error !== 'undefined' && error) { %>
        <p class="text-red-600 text-sm"><%= error %></p>
      <% } %>
      <label class="grid gap-1">
        <span class="text-sm text-gray-700">Email</span>
        <input type="email" name="email" required class="border rounded px-3 py-2 w-full" placeholder="you@example.com">
      </label>
      <label class="grid gap-1">
        <span class="text-sm text-gray-700">Password</span>
        <input type="password" name="password" required class="border rounded px-3 py-2 w-full" placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢">
      </label>
      <button class="mt-2 bg-emerald-600 hover:bg-emerald-700 text-white font-semibold px-4 py-2 rounded">
        Sign in
      </button>
    </form>

    <!-- Register form -->
    <form id="formRegister" method="POST" action="/register" class="grid gap-4 hidden">
      <label class="grid gap-1">
        <span class="text-sm text-gray-700">Email</span>
        <input type="email" name="email" required class="border rounded px-3 py-2 w-full" placeholder="you@example.com">
      </label>
      <label class="grid gap-1">
        <span class="text-sm text-gray-700">Password</span>
        <input type="password" name="password" required class="border rounded px-3 py-2 w-full" placeholder="Create a password">
      </label>
      <label class="grid gap-1">
        <span class="text-sm text-gray-700">Account Type</span>
        <select name="role" class="border rounded px-3 py-2 w-full">
          <option value="business">Business</option>
          <option value="user">User</option>
          <option value="sponsor">Sponsor</option>
        </select>
      </label>
      <button class="mt-2 bg-emerald-600 hover:bg-emerald-700 text-white font-semibold px-4 py-2 rounded">
        Create account
      </button>
    </form>

    <p class="mt-6 text-xs text-gray-500">
      By continuing you agree to our terms and acknowledge our environmental mission üåø
    </p>
  </section>
</div>

<script>
  const tabLogin = document.getElementById('tabLogin');
  const tabRegister = document.getElementById('tabRegister');
  const formLogin = document.getElementById('formLogin');
  const formRegister = document.getElementById('formRegister');

  function setTab(which){
    const isLogin = which === 'login';
    formLogin.classList.toggle('hidden', !isLogin);
    formRegister.classList.toggle('hidden', isLogin);
    tabLogin.classList.toggle('border-emerald-600', isLogin);
    tabLogin.classList.toggle('text-emerald-700', isLogin);
    tabRegister.classList.toggle('border-emerald-600', !isLogin);
    tabRegister.classList.toggle('text-emerald-700', !isLogin);
    tabRegister.classList.toggle('text-gray-500', isLogin);
  }
  tabLogin.addEventListener('click', ()=> setTab('login'));
  tabRegister.addEventListener('click', ()=> setTab('register'));
</script>
